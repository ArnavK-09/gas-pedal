class {}

style { 
  #gasPedal {
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -khtml-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
  }
}
<div id=(input.id)>
  <button
    type="button"
    on-touch-start=(event => accelerate)
    on-touch-end=(event => decelerate)
  >
    <img alt="Gas Pedal" src=(input.img) />
  </button>
</div>